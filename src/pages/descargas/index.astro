---
import Layout from '@/layouts/Layout.astro'
---

<Layout title='Descargas'>
	<div class='marco'>
		<a
			class='anchor'
			target='_blank'
			href='/Plan de Movilidad.pdf'
			><img
				class='imagen'
				src='/plan de movilidad.png'
				alt='imagen de portada del plan de movilidad'
			/></a
		>
	</div>
</Layout>

<style>
	.marco {
		background-color: #ff0;
		padding: 1rem;
		margin: .5rem;
		border: 1px solid #000;
		display: flex;
		justify-content: center;
		align-items: center;
		margin: auto;
		width: 100%;
		height: 100%;
		overflow-y: hidden;
		position: absolute;
		z-index: 99;
	}
  .anchor {
    width: 100%;
    height: 100%;
  }
	.imagen {
		object-fit: contain;
		padding: 3rem;
		width: 100%;
		height: 100%;
	}
</style>
